/* === Couleurs directement √©crites === */

/* üåé Style global */
QWidget {
    background-color: #FFFFFF;
    color: #2B2B2B;
    font-family: 'Arial';
    font-size: 10pt;
}













/* üñºÔ∏è Style sp√©cifique aux frames */
/* üåü Style pour Valider */
QPushButton#PrimaryButton {
    background-color: #EC831E; /* Orange */
    color: #FFFFFF;
    border: none;
    border-radius: 6px;
    padding: 8px 16px;
    font-size: 14px;
}

/* Hover pour Valider */
QPushButton#PrimaryButton:hover {
    background-color: #9C520C; /* Orange fonc√© */
    color: #FFFFFF;
}

/* üÜó Style pour Annuler */
QPushButton#SecondaryButton {
    background-color: #FFFFFF; /* Blanc */
    color: #2B2B2B; /* Noir */
    border: 1px solid #2B2B2B;
    border-radius: 6px;
    padding: 8px 16px;
    font-size: 14px;
}

/* Hover pour Annuler */
QPushButton#SecondaryButton:hover {
    background-color: #DDDDDD; /* Gris clair */
    color: #2B2B2B;
}

/* üÜó Style pour + */
QPushButton#PlusButton {
    background-color: #FFFFFF; /* Blanc */
    color: #2B2B2B; /* Noir */
    border: 1px solid #2B2B2B;
    border-radius: 6px;
    padding: 2px 2px;
    font-size: 14px;
}

/* Hover pour + */
QPushButton#PlusButton:hover {
    background-color: #DDDDDD; /* Gris clair */
    color: #2B2B2B;
}

/* üÜó Style pour - */
QPushButton#DeleteButton {
    background-color: #FFFFFF; /* Blanc */
    color: #2B2B2B; /* Noir */
    border: 1px solid #2B2B2B;
    border-radius: 6px;
    padding: 2px 2px;
    font-size: 14px;
}

/* Hover pour - */
QPushButton#DeleteButton:hover {
    background-color: #ff0000; /* Gris clair */
    color: #ffffff;
}













/* ‚úçÔ∏è Champs de texte */
QLineEdit, QTextEdit, QComboBox {
    background-color: #FFFFFF;
    border: 1px solid #CCCCCC;
    border-radius: 6px;
    padding: 3px;
}

QLineEdit#search_input {
    border: 1px solid #000000;
}









/* üìú Listes */
QListWidget {
    background-color: #F5F5F5;
    border: 1px solid #CCCCCC;
}

/* üéõÔ∏è ComboBox style */
QComboBox {
    background-color: #FFFFFF;
    color: #2B2B2B;
    border: 1px solid #2B2B2B;
    border-radius: 6px;
    padding: 5px 12px;
}

QComboBox:hover {
    background-color: #DDDDDD;
}

/* üìã Menu d√©roulant ComboBox */
QComboBox QAbstractItemView {
    background-color: #FFFFFF;
    selection-background-color: #EC831E;
    selection-color: #FFFFFF;
    border: 1px solid #2B2B2B;
    border-radius: 6px;
    outline: 0;
}

/* üéØ Hover sur les options */
QComboBox QAbstractItemView::item:hover {
    background-color: #DDDDDD;
    color: #2B2B2B;
}

/* üîΩ Bouton dropdown */
QComboBox::drop-down {
    border-left: 1px solid #2B2B2B;
    background: #FFFFFF;
    width: 20px;
}

/* üîΩ Fl√®che dropdown */
QComboBox::down-arrow {
    image: none;
    width: 10px;
    height: 10px;
}









/* Navigation Dropdown */
QComboBox#Navigation_Dropdown {
    background-color: #FFFFFF;
    border: 1px solid #2B2B2B;
    border-radius: 6px;
    padding: 6px 12px; /* Espace int√©rieur texte */
    font-size: 14px;
    color: #2B2B2B;
}

/* Hover sur la combobox */
QComboBox#Navigation_Dropdown:hover {
    background-color: #F0F0F0;
    border: 1px solid #1A1A1A;
}

/* Lorsque la dropdown est ouverte */
QComboBox#Navigation_Dropdown::drop-down {
    subcontrol-origin: padding;
    subcontrol-position: top right;
    width: 30px;
    border-left: 1px solid #CCCCCC;
}

/* Petite fl√®che de la dropdown */
QComboBox#Navigation_Dropdown::down-arrow {
    image: url(:/icons/Arrow_Big_Down.png); /* optionnel : ton ic√¥ne personnalis√©e */
    width: 12px;
    height: 12px;
}

/* Liste des √©l√©ments */
QComboBox#Navigation_Dropdown QAbstractItemView {
    background-color: #FFFFFF;
    border: 1px solid #2B2B2B;
    selection-background-color: #D0D0D0;
    selection-color: #000000;
    border-radius: 4px;
    padding: 4px;
    outline: 0;
}











#AddNoteWidget {
    background-color: #FFFFFF; /* Blanc */
    color: #2B2B2B; /* Noir */
    border: 1px solid #2B2B2B;
    border-radius: 6px;
}









/* Style global pour NoteDetailWidget */
#NoteDetailWidget {
    background-color: #FFFFFF;
    border: 1px solid #2B2B2B;
    border-radius: 6px;
}

/* Style global pour les labels */
#NoteDetailWidget QLabel {
    background: none;
    border: none;
    color: #2B2B2B;
    font-size: 10pt;
}










QWidget#Home_Box {
    background-color: #FFFFFF;
    border: 1px solid #2B2B2B;
    border-radius: 6px;
}

QWidget#Home_Button {
    background-color: #FFFFFF;
    border: 1px solid #2B2B2B;
    border-radius: 6px;
    color: #2B2B2B;
}