/* üñºÔ∏è Style sp√©cifique aux frames */
/* üåü Style pour Valider */
QPushButton#PrimaryButton {
    background-color: #EC831E; /* Orange */
    color: #FFFFFF;
    border: none;
    border-radius: 6px;
    padding: 8px 16px;
    font-size: 14px;
}

/* Hover pour Valider */
QPushButton#PrimaryButton:hover {
    background-color: #9C520C; /* Orange fonc√© */
    color: #FFFFFF;
}

/* üÜó Style pour Annuler */
QPushButton#SecondaryButton {
    background-color: #FFFFFF; /* Blanc */
    color: #2B2B2B; /* Noir */
    border: 1px solid #2B2B2B;
    border-radius: 6px;
    padding: 8px 16px;
    font-size: 14px;
}

/* Hover pour Annuler */
QPushButton#SecondaryButton:hover {
    background-color: #DDDDDD; /* Gris clair */
    color: #2B2B2B;
}

/* üÜó Style pour + */
QPushButton#PlusButton {
    background-color: #FFFFFF; /* Blanc */
    color: #2B2B2B; /* Noir */
    border: 1px solid #2B2B2B;
    border-radius: 6px;
    padding: 2px 2px;
    font-size: 14px;
}

/* Hover pour + */
QPushButton#PlusButton:hover {
    background-color: #DDDDDD; /* Gris clair */
    color: #2B2B2B;
}

/* üÜó Style pour - */
QPushButton#DeleteButton {
    background-color: #FFFFFF; /* Blanc */
    color: #2B2B2B; /* Noir */
    border: 1px solid #2B2B2B;
    border-radius: 6px;
    padding: 2px 2px;
    font-size: 14px;
}

/* Hover pour - */
QPushButton#DeleteButton:hover {
    background-color: #ff0000; /* Gris clair */
    color: #ffffff;
}